{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
		{
			"label": "Build",
			"type": "shell",
			"linux": {
				"command": "./scripts/build-deb.sh",
			},
			"osx": {
				"command": "./scripts/build-mac.sh",
			},
			"windows": {
				"command": ".\\scripts\\build.cmd"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"reveal": "always",
				"panel": "new"
			}
		},
		{
			"label": "Run",
			"type": "shell",
			"linux": {
				"command": "./scripts/run-deb.sh",
			},
			"osx": {
				"command": "open ChloeVM.app",
			},
			"windows": {
				"command": ".\\scripts\\run.cmd"
			},
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"presentation": {
				"reveal": "always",
				"panel": "new"
			},
			"problemMatcher": []
		},

		{
			"label": "asmdoc",
			"type": "shell",
			"linux": {
				"command": "./scripts/asmdoc.sh",
			},
			"osx": {
				"command": "./scripts/asmdoc.sh",
			},
			"windows": {
				"command": ".\\scripts\\asmdoc.cmd",
			},
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"presentation": {
				"reveal": "always",
				"panel": "new"
			},
			"problemMatcher": []
		},

		{
			"label": "locales",
			"type": "shell",
			"linux": {
				"command": "./scripts/locales.sh",
			},
			"osx": {
				"command": "./scripts/locales.sh",
			},
			"windows": {
				"command": ".\\scripts\\locales.cmd",
			},
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"presentation": {
				"reveal": "always",
				"panel": "new"
			},
			"problemMatcher": []
		}

	]
}